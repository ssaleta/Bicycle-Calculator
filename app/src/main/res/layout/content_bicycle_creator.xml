<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.BicycleCreator"
    tools:showIn="@layout/activity_bicycle_creator"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
    android:id="@+id/input_layout_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_below="@+id/servicePhoto"
   >
    <EditText
        android:id="@+id/creator_name"
        android:layout_width="240dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:hint="@string/set_name"
        android:layout_below="@+id/servicePhoto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:imeOptions="actionDone"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_creator_chainring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_name">
    <EditText
        android:id="@+id/creator_chainring"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="@string/set_chainring"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:imeOptions="actionDone"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/wheel_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner"
        android:text="@string/wheel_size"
        android:layout_alignStart="@id/spinner"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_above="@+id/input_layout_creator_cog"
        android:layout_alignEnd="@+id/input_layout_creator_chainring" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_creator_cog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_creator_chainring">

    <EditText
        android:id="@+id/creator_cog"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="@string/set_cog"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:imeOptions="actionDone"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/createBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:onClick="createBicycle"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginEnd="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/input_layout_creator_cog"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/jawor_serwis"
        android:id="@+id/servicePhoto"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"/>
</RelativeLayout>

